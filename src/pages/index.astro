---
import MainLayout from '@/layouts/MainLayout.astro'
---

<MainLayout>
  <div class="pb-5 text-center">
    <h1 class="pb-2 font-cinzel text-3xl">Mariner</h1>
  </div>
  <div
    class="relative flex w-full items-center justify-center overflow-hidden rounded lg:-mx-24 lg:w-[calc(96px*2+100%)] lg:max-w-[calc(96px*2+100%)]"
  >
    <video
      src="https://media.marinerworldwide.com/home.mp4"
      autoplay
      controls
      playsinline
      muted
      class="aspect-video h-full w-full object-cover"
    >
      Your browser does not support video tag.
    </video>
  </div>
  <div class="pt-8 text-gray-500 dark:text-gray-400">
    <p class="text-center">
      Explore, experience and enjoy the world with Mariner. We provide exclusive
      services for everyone.
    </p>
    <p class="pt-2 text-center">
      Discover yachts, catamarans, apartments and more.
    </p>
  </div>
</MainLayout>
