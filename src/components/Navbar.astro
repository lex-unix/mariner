---
import Logo from './Logo.astro'
import NavbarLink from './NavbarLink.astro'
import ThemeToggle from './ThemeToggle'
---

<div
  class="fixed w-full bg-white/40 shadow-sm backdrop-blur-lg dark:bg-gray-950/40"
>
  <div class="mx-auto flex max-w-3xl items-center justify-between py-2">
    <div class="flex items-center gap-4">
      <div class="mr-5">
        <Logo />
      </div>
      <NavbarLink href="/marina">Marina</NavbarLink>
      <NavbarLink href="/apartments">Apartments</NavbarLink>
      <NavbarLink href="/routes">Routes</NavbarLink>
      <NavbarLink href="/contact-us">Contact Us</NavbarLink>
    </div>
    <ThemeToggle client:load />
  </div>
</div>
