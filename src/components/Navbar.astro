---
import Logo from './Logo.astro'
import NavbarLink from './NavbarLink.astro'
import ThemeToggle from './ThemeToggle'
import DropdownMenu from './DropdownMenu'
---

<div
  class="fixed z-10 w-full bg-white/40 shadow-sm backdrop-blur-lg dark:bg-gray-950/40"
>
  <div class="mx-auto flex max-w-3xl items-center justify-between px-4 py-2">
    <div class="flex items-center gap-4">
      <div class="mr-5">
        <Logo />
      </div>
      <NavbarLink href="/marina">Marina</NavbarLink>
      <NavbarLink href="/apartments">Apartments</NavbarLink>
      <NavbarLink href="/navigations">Navigations</NavbarLink>
      <NavbarLink href="/contact-us">Contact Us</NavbarLink>
    </div>
    <div class="flex items-center gap-2">
      <ThemeToggle client:load />
      <div class="inline-flex items-center md:hidden">
        <DropdownMenu client:load />
      </div>
    </div>
  </div>
</div>
